<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloLayout.MainPage">

    <ScrollView> <!--Può contenere un solo container-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="200"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <VerticalStackLayout Grid.Column="0" Grid.Row="0" Margin="5">
                <Button Margin="0, 0, 0, 1" Text="b(0;0)"/>
                <Button Margin="0, 1, 0, 1" Text="b(0;0)"/>
                <Button Margin="0, 1, 0, 1" Text="b(0;0)"/>
                <Button Margin="0, 1, 0, 1" Text="b(0;0)"/>
            </VerticalStackLayout>
            <Grid Grid.Column="0" Grid.Row="1" ColumnSpacing="4" RowSpacing="4" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="93"/>
                    <RowDefinition Height="93"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="93"/>
                    <ColumnDefinition Width="93"/>
                </Grid.ColumnDefinitions>
                <Button  Grid.Column="0" Grid.Row="0"/>
                <Button  Grid.Column="1" Grid.Row="0"/>
                <Button  Grid.Column="0" Grid.Row="1"/>
                <Button  Grid.Column="1" Grid.Row="1"/>
            </Grid>
            <Button Grid.Column="1" Grid.Row="0" Margin="5" Text="b(1;0)"/>
            <Button Grid.Column="2" Grid.Row="0" Margin="5" Text="b(2;0)"/>
            <Button Grid.Column="3" Grid.Row="0" Margin="5" Text="b(3;0)"/>
            <Button Grid.Column="1" Grid.Row="1" Margin="5" Text="b(1;1)"/>
            <Button Grid.Column="2" Grid.Row="1" Margin="5" Text="b(2;1)"/>
            <Button Grid.Column="3" Grid.Row="1" Margin="5" Text="b(3;1)"/>
            <Button Grid.Column="0" Grid.Row="2" Margin="5" Text="b(0;2)"/>
            <Button Grid.Column="1" Grid.Row="2" Margin="5" Text="b(1;2)"/>
            <Button Grid.Column="2" Grid.Row="2" Margin="5" Text="b(2;2)"/>
            <Button Grid.Column="3" Grid.Row="2" Margin="5" Text="b(3;2)"/>
            <Button Grid.Column="0" Grid.Row="3" Margin="5" Text="b(0;3)"/>
            <Button Grid.Column="1" Grid.Row="3" Margin="5" Text="b(1;3)"/>
            <Button Grid.Column="2" Grid.Row="3" Margin="5" Text="b(2;3)"/>
            <Button Grid.Column="3" Grid.Row="3" Margin="5" Text="b(3;3)"/>
        </Grid>
        
    </ScrollView>

</ContentPage>
