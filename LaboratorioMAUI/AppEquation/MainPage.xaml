<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEquation.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            HorizontalOptions="Center">
            
            <Grid RowSpacing="15" ColumnSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>
                <Label Grid.Column="0" Grid.Row ="0"
                   Text="Coefficente A:"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>
                <Entry Grid.Column="1" Grid.Row ="0"
                   x:Name="EntA"
                   Placeholder="Inserisci a"
                   HorizontalOptions="Center"
                   MinimumWidthRequest="400"
                   Keyboard="Numeric"/>
                <Label Grid.Column="0" Grid.Row ="1"
                   Text="Coefficente B:"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>
                <Entry Grid.Column="1" Grid.Row ="1"
                   x:Name="EntB"
                   Placeholder="Inserisci b"
                   HorizontalOptions="Center"
                   MinimumWidthRequest="400"
                   Keyboard="Numeric"/>
                <Label Grid.Column="0" Grid.Row ="2"
                   Text="Coefficente C:"
                   FontSize="20"
                   HorizontalOptions="Center"
                   Margin="0,20,0,0"/>
                <Entry Grid.Column="1" Grid.Row ="2"
                   x:Name="EntC"
                   Placeholder="Inserisci c"
                   HorizontalOptions="Center"
                   MinimumWidthRequest="400"
                   Keyboard="Numeric"/>
            </Grid>
            <Button x:Name="btnCalcola" 
                Text="Calcola radici"
                Clicked="ValidazionePreventiva"/>
            <Label x:Name="LblRisultato"
                Text="Risultato: -"
                HorizontalTextAlignment="Center"
                FontSize="20"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
